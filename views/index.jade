          div(style="margin-bottom: 10px;box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);")
            a(href="/track")
              img(src="/trackImg.jpg" width="575px")
          div(style="background: white; height: 195px;box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);")
            div(style="background:red; height: 38px; padding-top:8px;")
              p(style="font-size: 20px; font-weight:bold") 공지사항
              ul(class="list-group")
                -for(var i = 0; i<3; i++)
                  li(class="list-group-item" style="height: 42px;")
                    a(href="#")= notices[i]['Notice_title']


      #exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
