    div(class="container")
      #layout(style='width:1100px; height: 630px; display:block;')
        .left(style="background:#a0f67e; margin-right: 10px; elevation: above;border-radius: 2px; box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);")
