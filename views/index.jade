          div
            table(class="table table-hover")
              tbody(style="text-align:center")
                tr(style="height: 100px; font-size:25px;")
                  td(style="padding-top:33px; color: white" type='button', data-toggle='modal', data-target='#exampleModal', data-whatever='@getbootstrap' id="1") 1학년
                tr(style="height: 100px; font-size:25px;")
                  td(style="padding-top:33px; color: white" type='button', data-toggle='modal', data-target='#exampleModal', data-whatever='@getbootstrap' id="2") 2학년
                tr(style="height: 100px; font-size:25px;")
