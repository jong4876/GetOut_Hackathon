extends layout

block content
  h1= title
  form(action='/subject/search' method='post')
    p
      input(type='text' name='sub_name' placeholder = '과목이름')
    p
      input(type='submit')

  table(style='border: 1px solid black;')
    tr
      th 학수번호
      th 과목이름
      th 학기
      th 교수명
      th 수업계획서
      th 타입
      th 교과
    each i in data
      tr
        td #{i.Subject_Id}
        td #{i.Subject_Name}
        td #{i.Semester}
        td #{i.Professor}
        td #{i.Plan}
        td
          -for(j=0 ; j < i.Track_Name.length ; j++)
            if i.Track_Name[j] == "1"
              case j
                when 0: 비쥬얼 컴퓨팅,
                when 1: 멀티미디어,
                when 2: 사물인터넷,
                when 3: 시스템응용,
                when 4: 인공지능,
                when 5: 가상현실,
                when 6: 정보보호,
                when 7: 데이터사이언스,
                when 8: SW교육,
                when 9: 사이버국방
                default: 아몰랑
        td #{i.Type_id}
